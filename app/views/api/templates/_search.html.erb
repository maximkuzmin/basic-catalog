<div class="container-fluid">
  <div class="row">
    <div class="col-md-12" ng-if='showTemplate'>
      <h3 class="text-center">
        Оборудование для киосков
      </h3>
      <form class="form-horizontal" role="form">
        <div class="form-group">
        <div class="col-sm-6 col-sm-offset-2">
            <input type="text" class="form-control" ng-model='params.q'/>
          </div>
          <div class="col-sm-4">
            <button type="submit" class="btn btn-default" ng-click='requestData()'>
              Найти
            </button>
            <span class='label label-warning' ng-if='requestActive'>
              Идет поиск...
            </span>
            <span ng-hide='requestActive'>
              всего результатов: {{ goods.list.length }}
            </span>
          </div>
        </div>
      </form>
    </div>
  </div>
  <div class="row" ng-if=showTemplate>
    <div class="col-md-3 col-xs-6" ng-repeat='good in goods.list'>
      <h2>
        <a ui-sref="search.show_good({goodId: good.id})">
          {{ good.name }}
        </a>
      </h2>
      <p>
        {{ good.description }}
      </p>
      <p>
        <a class="btn" ui-sref="search.show_company({companyId: good.company.id})">
          <strong>{{ good.company.name }}</strong>
        </a>
      </p>
    </div>
  </div>
  <ui-view ng-if='!showTemplate'></ui-view>
</div>
